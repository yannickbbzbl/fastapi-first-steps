{
    "image": "mcr.microsoft.com/devcontainers/universal:2",
    "hostRequirements": {
      "cpus": 4
    },
    "waitFor": "onCreateCommand",
    "updateContentCommand": "pip install -r requirements.txt",
    "postCreateCommand": "",
    "postAttachCommand": {
      "server": "uvicorn main:app --reload"
    },
    "portsAttributes": {
      "8000": {
        "label": "Application",
        "onAutoForward": "openPreview"
      }
    },
    "customizations": {
      "codespaces": {
        "openFiles": [
          "test.http"
        ]
      },
      "vscode": {
        "extensions": [
          "ms-python.python"
          
        ]
      }
    },
    "forwardPorts": [8000]
  }
